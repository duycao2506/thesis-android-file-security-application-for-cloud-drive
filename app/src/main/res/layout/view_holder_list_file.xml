<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1sp"
    android:background="@color/gray"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <ImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:src="@drawable/scloud_logo"
            android:background="@color/gray"
            android:padding="@dimen/margin_20"
            android:scaleType="fitEnd"
            android:tint="@color/white"
            android:id="@+id/ivMain"
            />
        <LinearLayout
            android:layout_width="@dimen/drive_signal_thickness"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/ivLocalDrive"
                android:layout_weight="1"
                android:background="@color/gray_dark_transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <ImageButton
                android:id="@+id/ivGoogleDrive"
                android:layout_weight="1"
                android:background="@color/red"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <ImageButton
                android:id="@+id/ivDrive3"
                android:layout_weight="1"
                android:background="@color/blue_link"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_10"
            android:gravity="center"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/textSize_18"
                android:lines="2"
                android:ellipsize="end"
                android:id="@+id/tvFileTitle"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/textSize_16"
                android:text="Title"
                android:id="@+id/tvInfoFile"
                />
        </LinearLayout>



        <ImageView
            android:layout_width="@dimen/medium_icon_size"
            android:layout_height="@dimen/medium_icon_size"
            android:src="@drawable/ic_verified_user_black_24dp"
            android:layout_gravity="right|center_vertical"
            android:id="@+id/ivSecured"
            android:padding="@dimen/padding_5"
            android:tint="@color/colorSecondary"
            />

        <ImageButton
            android:tint="@color/gray_dark_transparent"
            android:layout_width="@dimen/medium_icon_size"
            android:layout_height="@dimen/medium_icon_size"
            android:layout_gravity="right|center_vertical"
            android:padding="@dimen/padding_5"
            android:background="@null"
            android:id="@+id/btnFileMenu"
            android:src="@drawable/ic_more_vert_black_24dp"
            />


    </LinearLayout>

</LinearLayout>