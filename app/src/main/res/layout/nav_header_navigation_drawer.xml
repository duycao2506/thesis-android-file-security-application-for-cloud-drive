<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    android:id="@+id/hdProfile">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:paddingBottom="0sp"
        android:scaleType="fitEnd"
        android:tint="@color/white"
        app:srcCompat="@drawable/headerpic" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:adjustViewBounds="true"
        android:alpha="0.8"
        android:background="@color/colorPrimary"
        android:cropToPadding="true"
        android:paddingBottom="0sp"
        android:scaleType="fitEnd"
        android:tint="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_color="@color/white"
            android:layout_width="@dimen/news_avatar"
            android:id="@+id/imvAvatarUser"
            android:layout_height="@dimen/news_avatar"
            app:civ_border_width="@dimen/padding_2"
            android:src="@drawable/girl"/>

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:text="@string/testname"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_18"
            android:textStyle="bold" />
    </LinearLayout>


</FrameLayout>